# ========== 공통 설정 ==========
TZ=Asia/Seoul
PYTHONUNBUFFERED=1
HF_HOME=/workspace/.cache/huggingface
HF_HUB_CACHE=/workspace/.cache/huggingface

# ========== 모델 경로 ==========
CONTENTVEC_MODEL=/workspace/models/contentvec/checkpoint_best.pt
RMVPE_MODEL=/workspace/models/rmvpe/rmvpe.pt
HIFIGAN_MODEL=/workspace/models/hifigan/g_universal.pth
DIFFSVC_CKPT=/workspace/models/diffsvc/ckpt_best.pt

# ========== 오디오 설정 ==========
SAMPLE_RATE=44100
HOP_SIZE=512
N_MELS=80

# ========== 학습/추론 설정 ==========
BATCH_SIZE=1
ACCUM_STEPS=2
AMP=True

# ========== GPU 설정 ==========
CUDA_VISIBLE_DEVICES=0
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# ========== 로깅 ==========
LOG_DIR=/workspace/logs
TENSORBOARD_DIR=/workspace/tensorboard
